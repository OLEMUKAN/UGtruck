@page
@model TruckLoadingApp.Pages.DriverSchedules.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DriverSchedule[0].Driver)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverSchedule[0].StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverSchedule[0].EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverSchedule[0].Route)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverSchedule[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverSchedule[0].DrivingHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverSchedule[0].RestHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverSchedule[0].IsOvertime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.DriverSchedule) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Driver.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Route.RouteId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DrivingHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RestHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsOvertime)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ScheduleId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ScheduleId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ScheduleId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
