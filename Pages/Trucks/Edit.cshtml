            <div class="form-group">
                <label asp-for="Truck.MaintenanceDueDate" class="control-label"></label>
                <input asp-for="Truck.MaintenanceDueDate" class="form-control" />
                <span asp-validation-for="Truck.MaintenanceDueDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
