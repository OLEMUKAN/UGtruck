@page
@model TruckLoadingApp.Pages.Trucks.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Truck[0].Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Truck[0].Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Truck[0].Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Truck[0].RegistrationNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Truck[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Truck[0].Driver)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Truck[0].CurrentLoadWeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Truck[0].MaintenanceDueDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Truck) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Driver.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentLoadWeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaintenanceDueDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
