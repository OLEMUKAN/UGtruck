@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="hero-section text-center">
    <div class="container">
        <h1 class="hero-title">Welcome to Truck Booking Services</h1>
        <p class="hero-text">Your trusted partner for efficient and reliable goods transportation. Connect with verified drivers and manage your logistics seamlessly.</p>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="feature-card text-center">
                <i class="fas fa-truck-loading feature-icon"></i>
                <h3>Easy Booking</h3>
                <p>Book trucks for your transportation needs with just a few clicks. Our streamlined process makes logistics management effortless.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card text-center">
                <i class="fas fa-user-check feature-icon"></i>
                <h3>Verified Drivers</h3>
                <p>All our drivers are thoroughly verified to ensure the safety and security of your goods during transportation.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card text-center">
                <i class="fas fa-route feature-icon"></i>
                <h3>Real-time Tracking</h3>
                <p>Track your shipments in real-time and stay updated with the latest status of your goods delivery.</p>
            </div>
        </div>
    </div>
</div>