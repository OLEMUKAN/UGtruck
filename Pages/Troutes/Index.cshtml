@page
@model TruckLoadingApp.Pages.Troutes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TRoute[0].Origin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TRoute[0].Destination)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TRoute[0].AvailableDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TRoute[0].Driver)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TRoute[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TRoute[0].CurrentCapacityPercentage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TRoute[0].IsReturnTrip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TRoute[0].DistanceInMiles)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TRoute[0].Truck)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TRoute) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Origin.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destination.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvailableDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Driver.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentCapacityPercentage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsReturnTrip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DistanceInMiles)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Truck.Brand)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.RouteId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.RouteId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.RouteId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
