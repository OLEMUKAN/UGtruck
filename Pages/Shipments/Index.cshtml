@page
@model TruckLoadingApp.Pages.Shipments.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Shipment[0].Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shipment[0].OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shipment[0].ExpectedDeliveryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shipment[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shipment[0].SpecialInstructions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shipment[0].TotalCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shipment[0].IsUrgent)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Shipment) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Client.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpectedDeliveryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpecialInstructions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsUrgent)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ShipmentId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ShipmentId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ShipmentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
